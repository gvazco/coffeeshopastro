---
import GalleryGrid from "@/components/gallery/GalleryGrid.astro";
import { GalleryPageSchema } from "@/types";
const url = `${import.meta.env.API_URL}/pages?slug=galeria`;
const response = await fetch(url);
const json = await response.json();
const data = GalleryPageSchema.parse(json[0]);
---

<section class="bg-white px-20 pb-40 max-w-7xl mx-auto -mt-20 relative">
  <h2
    class="text-coffee-400 text-center font-black text-lg uppercase after:coffee-icon pb-10"
  >
    Vive la
    <span class="text-coffee-900 text-4xl block">experiencia</span>
  </h2>
  <GalleryGrid gallery={data.gallery} />
</section>
